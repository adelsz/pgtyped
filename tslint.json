{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "prettier": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "arrow-parens": false,
    "array-type": false,
    "max-line-length": false,
    "max-classes-per-file": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "**/*types.ts",
      "**/*Lexer.ts",
      "**/*Parser.ts",
      "**/*ParserListener.ts",
      "**/*ParserVisitor.ts",
      "**/*queries.ts",
      "packages/example/**/*.ts",
      "packages/query/src/loader/*/parser/**/*.ts"
    ]
  }
}
